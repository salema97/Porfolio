---
import LanguageIcon from '../icons/Language.astro'
import SpainFlag from '../icons/SpainFlag.astro'
import USFlag from '../icons/USFlag.astro'
import LanguageItem from './LanguageItem.astro'

const { class: className } = Astro.props
---

<div class=`${className} flex items-center space-x-1 md:order-2 md:space-x-0 rtl:space-x-reverse`>
	<button
		type="button"
		data-dropdown-toggle="language-dropdown-menu"
		class="inline-flex cursor-pointer items-center justify-center rounded-lg p-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white"
	>
		<LanguageIcon class="size-5" />
	</button>
	<!-- Dropdown -->
	<div
		class="z-50 my-4 hidden list-none divide-y divide-gray-100 rounded-lg bg-white text-base shadow dark:bg-gray-700"
		id="language-dropdown-menu"
	>
		<ul class="py-2" role="none">
			<LanguageItem class="inline-flex items-center">
				Espa√±ol
				<SpainFlag class="ml-2 size-4" />
			</LanguageItem>
			<LanguageItem class="inline-flex items-center">
				English (US)
				<USFlag class="ml-2 size-4" />
			</LanguageItem>
		</ul>
	</div>
</div>
