---
import Badge from './Badge.astro'

export interface Props {
	name: string
	issued: string
	issueDate: string
	expirationDate?: string
	credentialId: string
	description: string
	url?: string
	image: string
	skills?: string[]
}

const { name, issued, issueDate, expirationDate, credentialId, description, url, image, skills } =
	Astro.props
---

<div class="h-full w-full">
	<a
		class="flex h-full max-w-full flex-row items-center rounded-lg border border-gray-200 bg-white shadow hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
	>
		<div class="h-full w-2/5 overflow-hidden">
			<img class="h-full w-full rounded-l-lg object-cover" src={image} alt="" />
		</div>
		<div class="flex h-full w-3/5 flex-col p-4 leading-normal">
			<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
				{name}
			</h5>
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
				{issued}
			</p>
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
				{description}
			</p>
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Emitido: {issueDate}</p>
			{
				expirationDate && (
					<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">Caduca: {expirationDate}</p>
				)
			}
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
				CÃ³digo de Credencial: {credentialId}
			</p>
			{
				skills && (
					<ul class="mb-2 flex flex-wrap">
						{skills.map((skills) => (
							<li>
								<Badge>{skills}</Badge>
							</li>
						))}
					</ul>
				)
			}
		</div>
	</a>
</div>
