---
import AboutMe from '../components/AboutMe.astro'
import Badge from '../components/Badge.astro'
import Degrees from '../components/Degrees.astro'
import Experience from '../components/Experience.astro'
import Projects from '../components/Projects.astro'
import SectionContainer from '../components/SectionContainer.astro'
import SocialPill from '../components/SocialPill.astro'
import BriefcaseIcon from '../icons/Briefcase.astro'
import CodeIcon from '../icons/Code.astro'
import GitHubIcon from '../icons/GitHub.astro'
import GmailIcon from '../icons/Gmail.astro'
import LinkedInIcon from '../icons/LinkedIn.astro'
import UserIcon from '../icons/User.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout
	title=`Porfolio "Steven Lema Velásquez" - Software Engineer & Full-Stack Developer`
	description="Te contactare a la brevedad"
>
	<main class="px-4">
		<SectionContainer class="pt-64">
			<h1
				class="flex flex-row gap-x-4 pb-6 text-3xl font-bold text-white md:text-4xl lg:pb-10 lg:text-5xl"
			>
				Hola, soy Steven
				<a
					href="https://www.linkedin.com/in/salema97"
					target="_blank"
					rel="noopener"
					class="flex items-center justify-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-wrap text-xl lg:text-2xl">
				<span class="font-semibold text-red-500/90">Ingeniero de Software</span>
				con sólidos conocimientos en el Desarrollo de Software, lo que me permite
				<span class="font-semibold text-sky-500/90">adquirir fácilmente nuevos conocimientos</span> en
				Lenguajes, Frameworks y Herramientas de desarrollo.
			</h2>
			<nav class="mt-8 flex flex-wrap gap-x-4">
				<SocialPill href="https://www.linkedin.com/in/salema97">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/salema97">
					<GitHubIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="mailto:salemavelasquez97@gmail.com">
					<GmailIcon class="size-4 md:size-6" />
					salemavelasquez97@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experience">
			<h2 class="mb-6 flex items-center gap-x-3 text-3xl font-semibold">
				<BriefcaseIcon class="size-8" />
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="degree">
			<h2 class="mb-6 flex items-center gap-x-3 text-3xl font-semibold">
				<UserIcon class="size-8" />
				Títulos y Certificaciones
			</h2>
			<Degrees />
		</SectionContainer>
		<SectionContainer id="projects">
			<h2 class="mb-6 flex items-center gap-x-3 text-3xl font-semibold">
				<CodeIcon class="size-8" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
		<SectionContainer id="about">
			<h2 class="mb-6 flex items-center gap-x-3 text-3xl font-semibold">
				<UserIcon class="size-8" />
				Acerca de mi
			</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
